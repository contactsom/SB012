<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>CookiesServletExample</display-name>
  <welcome-file-list>
    <welcome-file>cookiedemo.jsp</welcome-file>
  </welcome-file-list>
  
   <servlet>
  	<description>This is Servlet Cookie Example</description>
  	<display-name>CookieDemoServlet</display-name>
  	<servlet-name>CookieDemoServlet</servlet-name>
  	<servlet-class>com.simplilearn.cookie.CookieDemoServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>CookieDemoServlet</servlet-name>
  	<url-pattern>/sdemo.simplilearn</url-pattern>
  </servlet-mapping>
  
</web-app>