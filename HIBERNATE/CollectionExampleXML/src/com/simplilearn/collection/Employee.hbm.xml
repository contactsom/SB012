<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping package="com.simplilearn.collection">
	
	<class name="Employee" table="EMPLOYEE_DATA">

		<id name="empid" column="EMPLOYEE_ID" type="int">	
		<generator class="increment" />	
		</id>	
			
		<property name="empname"   				column="EMPLOYEE_NAME" />
		<property name="empdob"       			column="EMPLOYEE_DOB" />
		<property name="empqualification"       column="EMPLOYEE_QUALIFICATION" />
		
		<array name="empcourse" table="EMPLOYEE_COURSE" >
			<key column="empid"/>
			<index column="COURSE_ID"/>
			<element column="COURSE" type="string"/>
		</array>
		
		
		<list name="empemails" table="EMPLOYEE_EMAIL">
			<key column="empid"/>
			<index column="EMAIL_ID"/>
			<element column="EMAIL" type="string"/>
		</list>
		
		<bag name="empmarks" table="EMPLOYEE_MARKS">
			<key column="empid"/>
			<element column="MARKS" type="int"/>
		</bag>
		
		<set name="empphone" table="EMPLOYEE_PHONE">
			<key column="empid"/>
			<element column="PHONE" type="long"/>
		</set>
		
		<map name="empreferance" table="EMPLOYEE_REFERANCE">
			<key column="empid"/>
			<index column="REFERANCE_NAME" type="string"/>
			<element column="REFERANCE_PHONE" type="long"/>
		</map>
		
	</class>
</hibernate-mapping>


