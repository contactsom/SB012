<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping package="com.simplilearn.mapping">
	
	<class name="Customer" table="CUSTOMER_DETAILS">

		<id name="customerid" column="CUSTOMER_ID" type="int">	
		<generator class="increment" />	
		</id>	
			
		<property name="customername"   column="CUSTOMER_NAME" />
		<property name="customeremail"  column="CUSTOMER_EMAIL" />
		<property name="phone"  column="CUSTOMER_PHONE" type="long"/>
		<property name="customerdob"  column="CUSTOMER_DOB" type="date"/>
		
		<set name="order">
			<key column="customerid"/>
			<one-to-many class="Order"/>
		</set>
		
		
	</class>
</hibernate-mapping>


